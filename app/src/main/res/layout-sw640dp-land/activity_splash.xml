<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF565450"
    android:id="@+id/layout"
    android:tag="sw640dp"
    tools:context=".SplashActivity">

    <ImageView
        android:id="@+id/imgLogo"
        android:contentDescription="@string/strongholdgameassistant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="80dp"
        android:src="@drawable/logo_3"/>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="50dp"
        android:textSize="36sp"
        android:text="@string/strongholdgameassistant"
        android:textColor="#FFF"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView1"
        android:layout_alignStart="@id/textView1"
        android:layout_marginTop="20dp"
        android:text="@string/copyright"
        android:textSize="20sp"
        android:textColor="#FFF"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/textView1"
        android:layout_below="@id/textView2"
        android:layout_marginTop="20dp"
        android:text="@string/dev1"
        android:textSize="20sp"
        android:textColor="#FFF"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/textView1"
        android:layout_below="@id/textView3"
        android:layout_marginTop="20dp"
        android:text="@string/dev2"
        android:textSize="20sp"
        android:textColor="#FFF"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/textView1"
        android:layout_below="@id/textView4"
        android:layout_marginTop="20dp"
        android:text="@string/version"
        android:textSize="20sp"
        android:textColor="#FFF"/>
</RelativeLayout>
