<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/darkwood"
    android:keepScreenOn="true"
    tools:context=".Article27Activity"
    tools:ignore="HardcodedText">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/article27"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="40dp"
        android:src="@drawable/article27_2"/>

    <TextView
        android:id="@+id/txtTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:text="@string/zerotime"
        android:textColor="#FFF"
        android:textSize="140sp"/>

    <Button
        android:id="@+id/btnStart"
        android:onClick="clickedStart"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@id/txtTime"
        android:layout_below="@id/txtTime"
        android:layout_marginTop="20dp"
        android:background="@drawable/blackbutton_gradient"
        android:textColor="#FFF"
        android:textSize="24sp"
        android:text="@string/start"/>

    <Button
        android:id="@+id/btnReset"
        android:onClick="clickedReset"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_toStartOf="@id/btnStart"
        android:layout_below="@id/txtTime"
        android:layout_margin="5dp"
        android:background="@drawable/blackbutton_gradient"
        android:textColor="#FFF"
        android:textSize="24sp"
        android:text="@string/reset"/>
</RelativeLayout>
